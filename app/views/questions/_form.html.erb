<%= form_with model: @question do |f| %>
  <div class="mb-3 row">
    <%= f.label :title, class: 'col-sm-2 col-form-label'%>
    <%= f.text_field :title, required: true, minlength: 2, placeholder: "Title", class: 'form-control' %>
  </div>

  <div class="form-field">
    <%= f.label :body, class: 'form-label' %>
    <%= f.text_area :body, required: true, minlength: 2, class: 'form-textarea' %>
  </div>

  <%= f.submit "Submit question!", class: 'button button-dark button-small' %>
<% end %>
